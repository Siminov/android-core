	    <!-- Compress All HTML Pages -->
	    
		    		<!-- Compress HTML Home Pages -->
		    <apply executable="java" parallel="false">
	           <fileset dir="" includes="*.html">
	           </fileset>
	           <arg value="-jar"/>
	           <arg path="compressor/htmlcompressor.jar"/>
	           <arg line="--type html"/>
	           <srcfile/>
	           <arg value="-o"/>
	           <mapper type="glob" from="*" to="build/*"/>
	           <targetfile/>
	       	</apply>
